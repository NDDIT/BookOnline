@model NguyenDuyDuong.SachOnline.Models.SACH

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<style>
    dt, dd {
        margin-bottom: 10px;
    }
</style>
<div style="margin-bottom: 15px;">
    @Html.ActionLink("<< Về Trang quản trị", "BookManagement")
</div>
<div style="margin-right: 60px">
    <h2 style="text-align: center">THÔNG TIN CHI TIẾT SÁCH</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên sách
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenSach)
            </dd>

            <dt>
                Mô tả
            </dt>

            <dd>
                @Html.Raw(@Model.MoTa.ToString().Replace("\n","</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
            </dd>

            <dt>
                Ảnh bìa
            </dt>

            <dd>
                <img style="width: 250px;" src="@Url.Content("~/Images/" + @Model.AnhBia)" alt="@Model.MaSach" />
            </dd>

            <dt>
                Ngày cập nhật
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayCapNhat)
            </dd>

            <dt>
                Số lượng bán
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoLuongBan)
            </dd>

            <dt>
                Giá bán
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GiaBan)
            </dd>

            <dt>
                Mã chủ đề
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaCD)
            </dd>

            <dt>
                Mã nhà xuất bản
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaNXB)
            </dd>

        </dl>
    </div>
    <p style="text-align: center;">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaSach }) |
        @Html.ActionLink("Trở về", "Bookmanagement")
    </p>

</div>