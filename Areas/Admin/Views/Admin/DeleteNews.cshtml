@model NguyenDuyDuong.SachOnline.Models.TRANGTIN

@{
    ViewBag.Title = "DeleteBook";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div style="margin-bottom: 15px;">
    @Html.ActionLink("<< Về Trang quản trị", "BookManagement")
</div>
<div style="margin-right: 30px;">
    <h2 style="text-align: center">XÁC NHẬN THÔNG TIN SÁCH CẦN XÓA</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên trang
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenTrang)
            </dd>

            <dt>
                Mô tả
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NoiDung)
            </dd>

            <dt>
                Ngày cập nhật
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayTao)
            </dd>

            <dt>
                MetaTitle
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MetaTitle)
            </dd>

        </dl>

        @using (Html.BeginForm("ConfirmDeleteNews/" + Model.MaTT, "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="display: flex; justify-content: center; align-items: center;">
                <input type="submit" value="Xóa" class="btn btn-danger" style="margin-right: 14px;" />
                @Html.ActionLink("Trở về", "News")
            </div>
        }
    </div>

</div>