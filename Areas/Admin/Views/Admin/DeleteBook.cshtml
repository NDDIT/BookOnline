@model NguyenDuyDuong.SachOnline.Models.SACH

@{
    ViewBag.Title = "DeleteBook";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<div style="margin-bottom: 15px;">
    @Html.ActionLink("<< Về Trang quản trị", "BookManagement")
</div>
<div style="margin-right: 30px;">
    <h2 style="text-align: center">XÁC NHẬN THÔNG TIN SÁCH CẦN XÓA</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên sách
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenSach)
            </dd>

            <dt>
                Mô tả
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MoTa)
            </dd>

            <dt>
                Ảnh bìa
            </dt>

            <dd style="width: 200px;">
                <img style="width: 250px; object-fit: cover;" src="@Url.Content("~/Images/" + @Model.AnhBia)" alt="@Model.MaSach" />
            </dd>

            <dt>
                Ngày cập nhật
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NgayCapNhat)
            </dd>

            <dt>
                Số lượng bán
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SoLuongBan)
            </dd>

            <dt>
                Giá bán
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GiaBan)
            </dd>

            <dt>
                Mã chủ đề
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaCD)
            </dd>

            <dt>
                Mã nhà xuất bản
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaNXB)
            </dd>

        </dl>

        @using (Html.BeginForm("ConfirmDeleteBook/" + Model.MaSach, "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="display: flex; justify-content: center; align-items: center;">
                <input type="submit" value="Xóa" class="btn btn-danger" style="margin-right: 14px;" />
                @Html.ActionLink("Trở về", "Bookmanagement")
            </div>
        }
    </div>

</div>