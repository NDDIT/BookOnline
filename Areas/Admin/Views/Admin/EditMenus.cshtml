@model NguyenDuyDuong.SachOnline.Models.MENU

@{
    ViewBag.Title = "Edit Menus";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<style>
    .form-group {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<div style="margin-bottom: 15px;">
    @Html.ActionLink("<< Về Trang quản trị", "Menus")
</div>
<div style="margin-right: 60px">
    <h2 style="text-align: center">ĐIỀU CHỈNH THÔNG TIN MENU</h2>

    @using (Html.BeginForm("EditMenus", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <label class="control-label col-md-2">id</label>
        <div class="col-md-10">
            <div style="font: 10px; padding: 5px 0 0 5px;">
                @Model.id
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ten Menu</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MenuName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MenuName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">ParentID</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ParentId, ViewBag.id as IEnumerable<SelectListItem>, new { @class = "form-select" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Order Number</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.OrderNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OrderNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input style="margin-right: 20px;" type="submit" value="Lưu lại" class="btn btn-success" />
            @Html.ActionLink("Quay về", "Menus", new { @class = "btn btn-success" })
        </div>
    </div>

</div>
    }
</div>