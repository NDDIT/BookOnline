@model NguyenDuyDuong.SachOnline.Models.TRANGTIN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div style="margin-bottom: 15px;">
    @Html.ActionLink("<< Về Trang quản trị", "BookManagement")
</div>

<h2 style="text-align: center;">Thêm mới sách</h2>

@using (Html.BeginForm("CreateNews", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên trang</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenTrang, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenTrang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Noi dung</label>
        <div class="col-md-10">
            <textarea class="form-control" name="NoiDung" id="inp_mota">Mô tả news</textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default btn-danger" />
        </div>
    </div>
</div>
}
@section scripts{
    <script>
        CkEDITOR.replace('inp_mota')
    </script>
}




