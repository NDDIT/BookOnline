@model NguyenDuyDuong.SachOnline.Models.TRANGTIN

@{
    ViewBag.Title = "Edit News";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<style>
    .form-group {
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<div style="margin-bottom: 15px;">
    @Html.ActionLink("<< Về Trang quản trị", "Statistics")
</div>
<div style="margin-right: 60px">
    <h2 style="text-align: center">ĐIỀU CHỈNH THÔNG TIN SÁCH</h2>

    @using (Html.BeginForm("EditNews", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.MaTT)

            <div class="form-group">
                <label class="control-label col-md-2">Ma TT</label>
                <div class="col-md-10">
                    <div style="font: 10px; padding: 5px 0 0 5px;">
                        @Model.MaTT
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Ten trang</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTrang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTrang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Noi Dung</label>
                <div class="col-md-10">
                    <textarea name="NoiDung">@Model.NoiDung</textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="margin-right: 20px;" type="submit" value="Lưu lại" class="btn btn-success" />
                    @Html.ActionLink("Quay về", "News", new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    }
</div>