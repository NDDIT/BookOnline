@model NguyenDuyDuong.SachOnline.Models.CHUDE

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2 style="text-align: center;">Thêm mới chủ đề</h2>

@using (Html.BeginForm("CreateTopic", "Admin"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên chủ đề</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="display: flex; align-items: center;">
                <input type="submit" value="Thêm" class="btn btn-success" style="margin-right: 12px; margin-left: 0;" />
                <p class="text-success">@ViewBag.Message</p>
            </div>
        </div>
    </div>
}
