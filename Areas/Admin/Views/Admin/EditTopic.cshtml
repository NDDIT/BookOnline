@model NguyenDuyDuong.SachOnline.Models.CHUDE

@{
    ViewBag.Title = "Edit Topic";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div style="margin-bottom: 15px;">
    @Html.ActionLink("<< Về Trang trước", "Statistics")
</div>


<h2 style="text-align: center;">Chỉnh sửa chủ đề</h2>


@using (Html.BeginForm("EditTopic", "Admin"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaCD)

        <div class="form-group">
            <label class="control-label col-md-2">Tên chủ đề</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="display: flex; align-items: center;">
                <input type="submit" value="Save" class="btn btn-success" style="margin-right: 12px; margin-left: 0;" />
                <p class="text-success">@ViewBag.Message</p>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
